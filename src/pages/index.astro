---
import Layout from '../layouts/Layout.astro'
import Header from '../components/Header.svelte'
import NavBar from '../components/NavBar.svelte'
---

<Layout title="Hengers Dev">
	<main class="flex flex-col items-center justify-center">
		<nav class="nav">
			<NavBar />
		</nav>
		<header class="header">
			<Header />
		</header>
	</main>
</Layout>

<style>
	body {
		margin: auto;
		padding: 0;
		font-family:
			-apple-system,
			BlinkMacSystemFont,
			Segoe UI,
			Roboto,
			Oxygen,
			Ubuntu,
			Cantarell,
			Fira Sans,
			Droid Sans,
			Helvetica Neue,
			sans-serif;
		width: 80%;
		height: 100%;
	}
	main {
		width: 100%;
		height: 100%;
		margin: auto;
	}
	.nav {
		width: 100%;
	}
	.header {
		width: 100%;
	}
</style>
